<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-image: url('images/tiles/FloorOutside.png')">

    <!-- Liste des créatures & Docteurs à droite -->
    <right>
        <VBox spacing="10" alignment="TOP_RIGHT"
              VBox.vgrow="ALWAYS"
              style="-fx-padding: 10;">
            <fx:include source="listCreatureView.fxml" VBox.vgrow="ALWAYS"/>
            <fx:include source="listDoctorsView.fxml" VBox.vgrow="ALWAYS"/>
        </VBox>
    </right>

    <!-- Vue Hôpital au centre -->
    <center>
<!--        <fx:include source="medicalServiceView.fxml" HBox.hgrow="ALWAYS"/>-->
        <fx:include source="hospitalStructureView.fxml"/>
    </center>

    <!-- Boutons & Console des logs & Compteurs en bas -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <!-- Console à gauche qui prend tout l'espace possible -->
            <fx:include source="consoleLogView.fxml" HBox.hgrow="ALWAYS"/>

            <!-- Toolbar verticale de boutons, largeur fixe 60 -->
            <VBox prefWidth="150" minWidth="60" maxWidth="150" spacing="10" alignment="TOP_CENTER">
                <fx:include source="toolbar.fxml"/>
            </VBox>

            <!-- doomView + counterView côte à côte -->
            <HBox spacing="0" alignment="CENTER_RIGHT">
                <fx:include source="doomView.fxml"/>
                <VBox prefWidth="320" minWidth="320" style="-fx-padding: 10;">
                    <fx:include source="counterView.fxml"/>
                </VBox>
            </HBox>
        </HBox>
    </bottom>

</BorderPane>

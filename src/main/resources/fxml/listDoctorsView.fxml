	  prefWidth="300"
	  alignment="CENTER"
	  style="-fx-background-color: #1e1e1e; -fx-padding: 10px;"
	  xmlns="http://javafx.com/javafx/21.0.2"
	  xmlns:fx="http://javafx.com/fxml/1"
	  fx:controller="com.fantasyhospital.controller.ListDoctorsController">

	<Label text="Liste des Docteurs"
		   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white" />

	<ListView fx:id="doctorsListView" VBox.vgrow="ALWAYS" maxWidth="Infinity"/>

</VBox>

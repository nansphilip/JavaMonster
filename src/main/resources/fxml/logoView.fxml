<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fantasyhospital.controller.LogoViewController"
      style="-fx-background-color: #1e1e1e; -fx-padding: 40px;">

    <ImageView fitWidth="400" preserveRatio="true">
        <Image url="/images/Logo.jpg"/>
    </ImageView>

    <Button text="Start Game"
            onAction="#startGame"
            style="-fx-background-color: #00aa00; -fx-text-fill: white; -fx-font-size: 16px;" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.Pane?>

<Pane xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fantasyhospital.controller.WaitingRoomController"
      fx:id="waitingRoom"
      layoutX="20.0"
      layoutY="50.0"
      prefWidth="200.0"
      prefHeight="600.0"
      style="-fx-background-color: #d3d3d3; -fx-border-color: #000000; -fx-border-width: 2;">

    <Label text="Salle d'attente"
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-wrap-text: true;"
           layoutX="10.0"
           layoutY="10.0"
           maxWidth="180.0" />

    <ListView fx:id="waitingRoomListView"
              layoutX="10.0"
              layoutY="40.0"
              prefWidth="180.0"
              prefHeight="550.0" />
</Pane>